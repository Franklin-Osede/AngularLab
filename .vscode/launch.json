{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Day01 - All MFs",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///./src/*": "${webRoot}/day01-ecommerce-mf/apps/*/src/*",
        "webpack:///src/*": "${webRoot}/day01-ecommerce-mf/apps/*/src/*",
        "webpack:///*": "*",
        "webpack:///./~/*": "${webRoot}/node_modules/*"
      },
      "preLaunchTask": "start-day01",
      "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-profile"
    },
    {
      "name": "Debug Day02 - All MFs",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///./src/*": "${webRoot}/day02-analytics-mf/apps/*/src/*",
        "webpack:///src/*": "${webRoot}/day02-analytics-mf/apps/*/src/*",
        "webpack:///*": "*",
        "webpack:///./~/*": "${webRoot}/node_modules/*"
      },
      "preLaunchTask": "start-day02",
      "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-profile"
    },
    {
      "name": "Debug Day03 - All MFs",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///./src/*": "${webRoot}/day03-realtime-mf/apps/*/src/*",
        "webpack:///src/*": "${webRoot}/day03-realtime-mf/apps/*/src/*",
        "webpack:///*": "*",
        "webpack:///./~/*": "${webRoot}/node_modules/*"
      },
      "preLaunchTask": "start-day03",
      "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-profile"
    },
    {
      "name": "Debug Shell Only",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true
    },
    {
      "name": "Debug Remote MF",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4201",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true
    }
  ],
  "compounds": [
    {
      "name": "Debug Day01 + Network",
      "configurations": ["Debug Day01 - All MFs"],
      "stopAll": true
    },
    {
      "name": "Debug Day02 + Network",
      "configurations": ["Debug Day02 - All MFs"],
      "stopAll": true
    },
    {
      "name": "Debug Day03 + Network",
      "configurations": ["Debug Day03 - All MFs"],
      "stopAll": true
    }
  ]
}
